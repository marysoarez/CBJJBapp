<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipal"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/fundo"
        android:layout_width="441dp"
        android:layout_height="743dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocbjjb" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_height="135dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocbjjb" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="135dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocbjjb" />


    <TextView
        android:id="@+id/textPro"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:text="ATLETA PROFISSIONAL REG. IBCJJ n°00000/00"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="invisible"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"

        />


    <View
        android:id="@+id/containerUser"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:visibility="invisible"
        android:background="@drawable/container_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="197dp"
        android:layout_height="206dp"
        app:layout_constraintBottom_toBottomOf="@+id/containerUser"
        app:layout_constraintEnd_toEndOf="@+id/containerUser"
        app:layout_constraintStart_toStartOf="@+id/containerUser"
        app:layout_constraintTop_toTopOf="@id/containerUser" />

    <View
        android:id="@+id/containerInfos"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="340dp"
        android:visibility="invisible"
        android:background="@drawable/container_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <!--texto placeholder nome-->
    <TextView
        android:id="@+id/holdernome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Nome:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toTopOf="@id/containerInfos"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        />
    <TextView
        android:id="@+id/textNomeUsuario"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Nome"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toTopOf="@id/containerInfos" />

    <!--texto placeholder nome-->

    <TextView
        android:id="@+id/holdergrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:text="Graduação:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/holdernome"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        />

    <TextView
        android:id="@+id/textgraduacao"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Graduação"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/textNomeUsuario" />

    <!--texto placeholder FAIXA-->

    <TextView
        android:id="@+id/holderfaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faixa:"
        android:textColor="@color/black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/holdergrad"
        app:layout_constraintRight_toRightOf="@+id/containerInfos" />

    <TextView
        android:id="@+id/textFaixa"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Faixa"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/textgraduacao" />


    <!--texto placeholder CATEGORIA-->
    <TextView
        android:id="@+id/holdercat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Peso:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/holderfaixa"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        />

    <TextView
        android:id="@+id/text_categoria"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Peso"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/textFaixa" />


    <!--texto placeholder EQUIPE-->

    <TextView
        android:id="@+id/holderequipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:text="Equipe:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/holdergenero"
        app:layout_constraintRight_toRightOf="@+id/containerInfos" />

    <TextView
        android:id="@+id/text_equipe"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Equipe"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/text_genero" />


    <!--texto placeholder GENERO-->
    <TextView
        android:id="@+id/holdergenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:text="Gênero:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/holdercat"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        />

    <TextView
        android:id="@+id/text_genero"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:text="Gênero"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/text_categoria" />




    <TextView
        android:id="@+id/holderativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Status:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/validacao"
        app:layout_constraintStart_toStartOf="@id/validacao"
        app:layout_constraintRight_toRightOf="parent"
        />


    <!--menu-->

    <TextView
        android:id="@+id/validacao"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        android:backgroundTint="@color/green"
        android:text="Ativo 2022"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="@+id/containerInfos"
        app:layout_constraintStart_toStartOf="@+id/containerInfos"
        app:layout_constraintTop_toBottomOf="@id/text_equipe" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.950"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_ftPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="@+id/floatingActionButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/floatingActionButton"
        app:srcCompat="@drawable/ic_profile" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_ftPerfil"
        app:layout_constraintEnd_toEndOf="@+id/bt_ftPerfil"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_ftPerfil"
        app:srcCompat="@drawable/ic_doc" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_deslogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_doc"
        app:layout_constraintEnd_toEndOf="@+id/bt_doc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_doc"
        app:srcCompat="@drawable/ic_exit" />



</androidx.constraintlayout.widget.ConstraintLayout>
